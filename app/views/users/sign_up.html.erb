<div class="container">

  <div class="row">
    <h1 class="col-lg-6 col-lg-offset-3 text-center">Sign Up</h1>
  </div>

  <% if @user %>
    <ul class="list-unstyled">
      <% @user.errors.each do |column, error_message| %>
        <li><%= column %> <%= error_message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_tag sign_up_path do %>
    <div class="row">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag "e-mail" %>
      </div>
      <div class="col-lg-3">
        <%= text_field_tag "user[email]" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag :password %>
      </div>
      <div class="col-lg-3">
        <%= password_field_tag "user[password]" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag "confirm your password" %>
      </div>
      <div class="col-lg-3">
        <%= password_field_tag "user[password_confirmation]" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 col-lg-offset-5">
        <%= submit_tag "Sign Up", class: "btn btn-block" %>
      </div>
    </div>
  <% end %>

</div>
