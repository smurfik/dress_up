<div class="container">

  <div class="row">
    <h1 class="col-lg-6 col-lg-offset-3 text-center">Add New Product</h1>
  </div>
  <br>

  <% if @product %>
    <ul class="list-unstyled">
      <% @product.errors.each do |column, message| %>
        <div class="row">
          <li class="col-lg-6 col-lg-offset-3 text-center alert alert-danger">
            <%= column.capitalize %> <%= message %>
          </li>
        </div>
      <% end %>
  <% end %>

  <%= form_tag admin_path, class: "form-horizontal" do %>
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag :name %>
      </div>
      <%= text_field_tag :name, nil, class: "col-lg-2", placeholder: "name" %>
    </div>
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag :description %>
      </div>
      <%= text_area_tag :description, nil, class: "col-lg-2", placeholder: "description of the product" %>
    </div>
    <div class="form-group">
      <div class="col-lg-3 col-lg-offset-3 text-center">
        <%= label_tag "Image Url"%>
      </div>
      <%= text_field_tag :image_url, nil, class: "col-lg-2", placeholder: "link to an image" %>
    </div>
    <div class="col-lg-2 col-lg-offset-5">
      <%= submit_tag "Add", class: "btn btn-block btn-success" %>
    </div>
  <% end %>

</div>
