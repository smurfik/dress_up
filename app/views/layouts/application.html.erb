<!DOCTYPE html>
<html>
<head>
  <title>DressUp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

  <div class="container">
    <div class="row header">
      <div class="col-lg-1">
        <%= link_to image_tag("https://s3.amazonaws.com/dressup02/logo.png"), root_path %>
      </div>
      <ul class="col-lg-11">
        <li>
          <% if @current_order %>
            <%= link_to "Cart (#{@current_order.items.count})", cart_path %></li>
          <% else %>
            <%= link_to "Cart (0)", cart_path %></li>
          <% end %>
        <% if @current_user %>
          <li><%= link_to "Sign Out", sign_out_path %></li>
          <li><%= link_to "My Account", "#" %></li>
        <% else %>
          <li><%= link_to "Sign Up", sign_up_path %></li>
          <li><%= link_to "Sign In", sign_in_path %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <% if flash[:notice] %>
    <br>
    <div class="col-lg-6 col-lg-offset-3 text-center alert alert-info">
      <%= flash[:notice] %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
