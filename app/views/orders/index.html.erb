<div class="container">
  <% @current_order.items.each do |item| %>
    <div class="row">
      <div class="col-lg-2 col-lg-offset-1">
        <%= image_tag(item.product_option.product.image_url, class: "image") %>
      </div>
        <h4 class="col-lg-9"><%= item.product_option.product.name %></h4>
        <div class="col-lg-9"><%= item.product_option.product.description %></div>
        <div class="col-lg-1"><%= item.product_option.name%></div>
        <div class="col-lg-8"><%= item.product_option.formatted_price %></div>
        <div class="col-lg-1"><%= label_tag :quantity %></div>
        <div class="col-lg-1"><%= item.quantity %></div>
    </div>
    <br>
  <% end %>
</div>
